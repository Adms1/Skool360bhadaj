<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text=""
            android:textColor="@color/light_blue"
            android:textSize="17dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@+id/title"
            android:layout_toEndOf="@+id/title"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_1_42"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="hiiii"
            android:textSize="17dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="@color/light_blue"
                android:textSize="17dip"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lblchaptername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="hiiii"
                android:textSize="17dip"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="@color/light_blue"
                android:textSize="17dip"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lblobjective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="hiiii"
                android:textSize="17dip"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="@color/light_blue"
                android:textSize="17dip"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lblque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="hiiii"
                android:textSize="17dip"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgRightSign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/orange_tick"
        android:textSize="17dip"
        android:visibility="gone" />

</LinearLayout>