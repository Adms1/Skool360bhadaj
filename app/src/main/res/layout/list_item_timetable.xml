<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txtLecture"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/txtSubject"
        android:gravity="center"
        android:layout_alignTop="@+id/txtSubject"
        android:layout_alignBottom="@+id/txtSubject"
        android:textColor="@color/black"
        android:background="#f8fcfe"
        android:text="Lecture 1" />

    <TextView
        android:id="@+id/txtSubject"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_10sdp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:padding="@dimen/_5sdp"
        android:background="#f8fcfe"
        android:text="Subject" />

    <TextView
        android:id="@+id/txtTeacher"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_10sdp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="#f8fcfe"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txtSubject"
        android:layout_alignTop="@+id/txtSubject"
        android:layout_alignBottom="@+id/txtSubject"
        android:layout_weight="1"
        android:padding="@dimen/_5sdp"
        android:text="Siddharth Karnik" />

</RelativeLayout>