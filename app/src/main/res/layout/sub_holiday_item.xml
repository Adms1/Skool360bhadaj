<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sub_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_5sdp"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/linear_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:orientation="vertical">

                    <!--<ImageView-->
                        <!--android:id="@+id/time_image"-->
                        <!--android:layout_width="@dimen/_15sdp"-->
                        <!--android:layout_height="@dimen/_15sdp"-->
                        <!--android:src="@drawable/time_clock" />-->
                    <TextView
                        android:id="@+id/holiday_date_txt"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:text="1"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"/>

                    <TextView
                        android:id="@+id/holiday_day"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:gravity="center|center_vertical"
                        android:text="Sun"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/holiday_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="Holiday Name"
                    android:background="@drawable/right"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="29/05/2018"
                    android:textColor="@color/blue"
                    android:layout_gravity="center"
                    android:textStyle="normal"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/norecordtxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:text="No Holiday available in this month."
            android:textColor="@color/absent_header"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"/>
        <!--<LinearLayout-->
            <!--android:id="@+id/norecord_Linear"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical"-->
            <!--android:visibility="gone">-->

            <!---->
        <!--</LinearLayout>-->
    </android.support.v7.widget.CardView>

</LinearLayout>
