<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/shadow_box"
    android:orientation="horizontal"
    android:padding="@dimen/_3sdp"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_3sdp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_1sdp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject_inbox_txt"
                android:layout_width="@dimen/_205sdp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/_5sdp"
                android:text="Subject"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/date_inbox_txt"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="start"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="17 dec"
            android:textColor="@color/blue"
            android:textSize="@dimen/_9sdp" />
        <TextView
            android:id="@+id/view_inbox_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="start"
            android:padding="@dimen/_5sdp"
            android:drawableRight="@drawable/down_add_family"
            android:drawableTint="@color/blue"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/_9sdp" />

        <!--<ImageView-->
            <!--android:id="@+id/view_inbox_txt"-->
            <!--android:layout_width="@dimen/_15sdp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="right|top"-->
            <!--android:layout_marginLeft="@dimen/_15sdp"-->
            <!--android:layout_marginBottom="@dimen/_5sdp"-->
            <!--android:padding="@dimen/_2sdp"-->
            <!--android:src="@drawable/down_add_family"-->
            <!--android:tint="@color/blue" />-->
    </LinearLayout>


</LinearLayout>

