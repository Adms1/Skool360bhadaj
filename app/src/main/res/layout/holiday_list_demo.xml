<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_holiday"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_line"
    android:orientation="vertical"
    android:tag="cards main container">

    <LinearLayout
        android:id="@+id/planner_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/month_name"
            android:layout_width="@dimen/_57sdp"
            android:layout_height="@dimen/_145sdp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:gravity="center"
            android:rotation="-90"
            android:text="December"
            android:textColor="@color/bg_color"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/holiday_event_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_2sdp"
            android:background="@drawable/list_line_verticale"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/holiday_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/_3sdp"
                android:layout_height="match_parent"
                android:background="@drawable/list_line_right" />
            <LinearLayout
                android:id="@+id/event_linear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>